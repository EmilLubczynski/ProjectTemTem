<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_temtem_gradient"
    tools:viewBindingIgnore="true"
    android:layout_marginBottom="5dp"
    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:radius="4dp"
        android:id="@+id/imageView"
        android:padding="@dimen/standard_padding"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="clip_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temtemNumberText"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TemTem # : "
            android:textColor="@color/cardview_light_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/temtemNumber"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TemTemNumber"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="@+id/temtemNumberText"
            app:layout_constraintStart_toEndOf="@+id/temtemNumberText"
            app:layout_constraintTop_toTopOf="@+id/temtemNumberText" />


        <TextView
            android:id="@+id/temtemNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Name : "
            android:textColor="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temtemNumberText" />

        <TextView
            android:id="@+id/temtemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TemTemName"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="@+id/temtemNameText"
            app:layout_constraintStart_toEndOf="@+id/temtemNameText"
            app:layout_constraintTop_toTopOf="@+id/temtemNameText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    >

</LinearLayout>